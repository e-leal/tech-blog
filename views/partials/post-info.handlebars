<article class="post">
  <div class="title">
        <a href="/post/{{post.id}}" target="_blank">{{post.title}}</a>
  </div>
  <div>
      <p>{{post.content_text}}</p>
  </div>
  <div class="meta">
    posted by {{post.user.username}} on
    {{post.created_at}}
    |
    <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
  </div>
  </article>